<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/list_item_forecast_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/list_item_forecast_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/list_item_forecast_icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@id/list_item_forecast_date"
            />

        <TextView
            android:id="@+id/list_item_forecast_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_forecast_date"
            android:layout_toRightOf="@id/list_item_forecast_icon"
            android:textColor="@android:color/white"
            android:textSize="44sp"/>

        <TextView
            android:id="@+id/list_item_forecast_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_forecast_temp"
            android:layout_toRightOf="@id/list_item_forecast_icon"
            android:text="Sunny"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white"/>
</LinearLayout>